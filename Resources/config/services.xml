<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="apple.appstore.pricetransformers.class">Apple\AppStoreBundle\Manager\PriceTransformerManager</parameter>
        <parameter key="apple.appstore.stores.class">Apple\AppStoreBundle\Manager\StoreManager</parameter>
        <parameter key="apple.appstore.class">Apple\AppStoreBundle\Manager\AppStoreManager</parameter>
    </parameters>

    <services>
        <service id="apple.appstore.pricetransformers" class="%apple.appstore.pricetransformers.class%" />
        <service id="apple.appstore.stores" class="%apple.appstore.stores.class%" />

        <service id="apple.appstore" class="%apple.appstore.class%">
            <argument type="service" id="apple.appstore.stores" />
            <argument type="service" id="apple.appstore.pricetransformers" />
        </service>
    </services>
</container>
