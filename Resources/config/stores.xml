<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="apple.appstore.store.us.class">Apple\AppStore\USStore</parameter>
        <parameter key="apple.appstore.store.ru.class">Apple\AppStore\RUStore</parameter>
        <parameter key="apple.appstore.store.ca.class">Apple\AppStore\CAStore</parameter>
        <parameter key="apple.appstore.store.ua.class">Apple\AppStore\UAStore</parameter>
    </parameters>

    <services>
        <service id="apple.appstore.store.us" class="%apple.appstore.store.us.class%">
            <tag name="apple.appstore.store" pricetransformer="usd" />
        </service>

        <service id="apple.appstore.store.ru" class="%apple.appstore.store.ru.class%">
            <tag name="apple.appstore.store" pricetransformer="rub" />
        </service>

        <service id="apple.appstore.store.ca" class="%apple.appstore.store.ca.class%">
            <tag name="apple.appstore.store" pricetransformer="cad" />
        </service>

        <service id="apple.appstore.store.ua" class="%apple.appstore.store.ua.class%">
            <tag name="apple.appstore.store" pricetransformer="uah" />
        </service>
    </services>
</container>
